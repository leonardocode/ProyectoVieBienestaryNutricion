@model ProyectoVieBienestaryNutricion.Models.CategoriaCLS
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h3 class="text-center">Eliminar Categoria</h3>
<form method="post" asp-action="Delete">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NombreCategoria"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NombreCategoria" class="form-control" />
                    <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="DescripcionCategoria"></label>
                </div>
                <div class="col-8">
                    <input asp-for="DescripcionCategoria" class="form-control" />
                    <span asp-validation-for="DescripcionCategoria" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FechaRegistroCategoria"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FechaRegistroCategoria" class="form-control" />
                    <span asp-validation-for="FechaRegistroCategoria" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Activo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Activo" class="form-control" />
                    <span asp-validation-for="Activo" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Eliminar</button>
                        </div>
                        <div class="col">
                            <a asp-area="Admin" asp-controller="Categorias" asp-action="Index" class="btn btn-danger form-control">Volver</a>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-4 pt-3">
                <img src="@Model.UrlImagen" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
        </div>
    </div>
</form>




