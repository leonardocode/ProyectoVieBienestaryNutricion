@model ProyectoVieBienestaryNutricion.Models.ProductoCLS
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> listaCategoria = ViewBag.listaCategoria;
}

<br />
<br />
<h3 class="text-center">Editar Producto</h3>
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-8  mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NombreProducto"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NombreProducto" class="form-control" />
                    <span asp-validation-for="NombreProducto" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="DescripcionProducto"></label>
                </div>
                <div class="col-8">
                    <input asp-for="DescripcionProducto" class="form-control" />
                    <span asp-validation-for="DescripcionProducto" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FechaRegistroProducto"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FechaRegistroProducto" class="form-control" />
                    <span asp-validation-for="FechaRegistroProducto" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UrlImagen"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                    <span asp-validation-for="UrlImagen" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Activo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Activo" class="form-control" />
                    <span asp-validation-for="Activo" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CategoriaId"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownList("CategoriaId", listaCategoria, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Editar</button>
                        </div>
                        <div class="col">
                            <a asp-area="Admin" asp-controller="Productos" asp-action="Index" class="btn btn-danger form-control">Volver</a>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <div class="col-4 pt-3">
            <img src="@Model.UrlImagen" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
        </div>
    </div>
</form>




