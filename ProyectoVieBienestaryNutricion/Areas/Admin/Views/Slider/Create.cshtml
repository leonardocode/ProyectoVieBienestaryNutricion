@model ProyectoVieBienestaryNutricion.Models.SliderCLS

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";    
}
<br />
<br />
<h3 class="text-center">Crear un nuevo Slider</h3>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="row px-2 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="NombreSlider"></label>
                </div>
                <div class="col-8">
                    <input asp-for="NombreSlider" class="form-control" />
                    <span asp-validation-for="NombreSlider" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FechaRegistroSlider"></label>
                </div>
                <div class="col-8">
                    <input asp-for="FechaRegistroSlider" class="form-control" />
                    <span asp-validation-for="FechaRegistroSlider" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UrlImagen"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                    <span asp-validation-for="UrlImagen" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Activo"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Activo" class="form-control" />
                    <span asp-validation-for="Activo" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control">Crear</button>
                    &nbsp;
                </div>
                <div class="col">
                    <a asp-area="Admin" asp-controller="Slider" asp-action="Index" class="btn btn-danger form-control">Volver</a>
                </div>
            </div>
        </div>
    </div>
</form>

